{% extends 'base.html.twig' %}
{% block body %}

    <div class="container mt-5">
        <h1>Informations sur {{ livre.titre }}</h1>

        <table class="table table-striped mt-5">
            <tbody>

            <tr>
                <td>Isbn</td>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <td>Titre</td>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <td>Nombre de pages</td>
                <td>{{ livre.nbpages }}</td>
            </tr>
            <tr>
                <td>Date de parution</td>
                <td>{{ livre.dateDeParution | date('d/m/Y') }}</td>
            </tr>
            <tr>
                <td>Note</td>
                <td>{{ livre.note}}</td>
            </tr>
            <tr>
                <td>Genre</td>
                <td>{% for genre in livre.genres %}{{ genre.nom }},{% endfor %}</td>
            </tr>
            <tr>
                <td>Auteur</td>
                <td>{% for auteur in livre.auteurs %}{{ auteur.nomPrenom }},{% endfor %}</td>
            </tr>

            </tbody>
        </table>
    </div>

{% endblock %}