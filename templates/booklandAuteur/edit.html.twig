{% extends 'base.html.twig' %}
{% block body %}

    <div class="container mt-5">
        <div class="mt-5">
            {{ form_start(monFormulaire) }}
            {{ form_rest(monFormulaire) }}
            <button class="btn btn-primary">search</button>
            {{ form_end(monFormulaire) }}
        </div>
        <table class="table mt-5">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">NAME</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for auteur in auteur %}
                <tr>
                    <th scope="row">{{auteur.id}}</th>
                    <td><a href="{{ path('bookland_showAuteur', {id: auteur.id}) }}">{{auteur.nomPrenom}}</a></td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a href="{{ path('bookland_modifierAuteur', {id: auteur.id}) }}"><button class="btn btn-primary" type="button">Modifier</button></a>
                            <a href="{{ path('bookland_removeAuteur', {id: auteur.id}) }}"><button class="btn btn-primary" type="button">Supprimer</button></a>
                        </div>
                    </td>

                </tr>

            {% endfor %}
            </tbody>
        </table>
        <div class="d-grid gap-2 d-md-block">
            <a href="{{ path('bookland_addAuteur') }}"><button class="btn btn-primary" type="button">Ajouter</button></a>
        </div>
    </div>

{% endblock %}