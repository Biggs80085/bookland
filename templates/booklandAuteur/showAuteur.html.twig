{% extends 'base.html.twig' %}
{% block body %}

    <div class="container mt-5">
    <h1>Informations sur {{ auteur.nomPrenom }}</h1>

    <table class="table table-striped mt-5">
        <tbody>

        <tr>
            <td>Nom Prenom</td>
            <td>{{ auteur.nomPrenom }}</td>
        </tr>
        <tr>
            <td>Sexe</td>
            <td>{{ auteur.sexe }}</td>
        </tr>
        <tr>
            <td>Date De Naissance</td>
            <td>{{ auteur.dateDeNaissance | date('d/m/Y') }}</td>
        </tr>
        <tr>
            <td>Nationalite</td>
            <td>{{ auteur.nationalite }}</td>
        </tr>
        <tr>
            <td>Livre</td>
            <td>{% for livre in auteur.livres %}{{ livre.titre }},{% endfor %}</td>
        </tr>
        <tr>
            <td>Genre</td>
            <td>{% for genre in genre %}{{ genre.nom }},{% endfor %}</td>
        </tr>

        </tbody>
    </table>
    </div>

{% endblock %}